---
import Layout from "../layouts/Layout.astro";
import fs from "node:fs";
import path from "node:path";
import botManager from "../lib/botManager";
import dotenv from "dotenv";

let message = "";
let msgType = "";

// Load current env to pre-fill
const envPath = path.resolve(".env");
const envConfig = dotenv.parse(fs.readFileSync(envPath));

if (Astro.request.method === "POST") {
    const contentType = Astro.request.headers.get("content-type");
    if (
        contentType &&
        (contentType.includes("multipart/form-data") ||
            contentType.includes("application/x-www-form-urlencoded"))
    ) {
        try {
            const data = await Astro.request.formData();
            const formType = data.get("formType");

            // Read existing env to preserve other values
            const currentEnv = dotenv.parse(fs.readFileSync(envPath));
            let newEnv = { ...currentEnv };

            if (formType === "credentials") {
                const username = data.get("username")?.toString();
                const password = data.get("password")?.toString();
                if (username && password) {
                    newEnv.CIS_USERNAME = username;
                    newEnv.CIS_PASSWORD = password;
                    message = "Zugangsdaten gespeichert!";
                    msgType = "success";
                }
            } else if (formType === "general") {
                const interval = data.get("interval")?.toString();
                const transcriptUrl = data.get("transcriptUrl")?.toString();
                if (interval) {
                    newEnv.CHECK_INTERVAL = interval;
                }
                if (transcriptUrl) {
                    newEnv.TRANSCRIPT_URL = transcriptUrl;
                }
                message = "Einstellungen gespeichert!";
                msgType = "success";
            } else if (formType === "notifications") {
                const discordEnabled = data.get("discordEnabled") === "on";
                const discordMode =
                    data.get("discordMode")?.toString() || "webhook";
                const discordWebhook = data.get("discordWebhook")?.toString();
                const discordBotToken = data.get("discordBotToken")?.toString();
                const discordUserId = data.get("discordUserId")?.toString();

                newEnv.DISCORD_ENABLED = discordEnabled ? "true" : "false";
                newEnv.DISCORD_MODE = discordMode;

                if (discordWebhook) newEnv.DISCORD_WEBHOOK_URL = discordWebhook;
                if (discordBotToken) newEnv.DISCORD_BOT_TOKEN = discordBotToken;
                if (discordUserId) newEnv.DISCORD_USER_ID = discordUserId;

                message = "Benachrichtigungseinstellungen gespeichert!";
                msgType = "success";
            }

            // Write back to .env
            let envContent = "";
            const keys = Object.keys(newEnv);
            for (let i = 0; i < keys.length; i++) {
                const k = keys[i];
                const v = newEnv[k];
                envContent += k + "=" + v + "\n";
            }
            fs.writeFileSync(envPath, envContent);

            // Restart bot
            botManager.restart();

            // Redirect if successful
            if (msgType === "success") {
                return Astro.redirect("/");
            }
        } catch (error) {
            console.error(error);
            message = "Fehler beim Speichern.";
            msgType = "error";
        }
    }
}
---

<Layout title="Einstellungen">
    <div class="glass-panel">
        <h1>Einstellungen</h1>
        {message && <div class={`message ${msgType}`}>{message}</div>}

        <div class="settings-section">
            <h2>Benachrichtigungen</h2>
            <form method="POST" id="notifyForm">
                <input type="hidden" name="formType" value="notifications" />
                <div class="form-group checkbox-group">
                    <label class="switch">
                        <input
                            type="checkbox"
                            name="discordEnabled"
                            checked={envConfig.DISCORD_ENABLED === "true"}
                        />
                        <span class="slider round"></span>
                    </label>
                    <span class="label-text"
                        >Discord Benachrichtigungen aktivieren</span
                    >
                </div>

                <div class="form-group">
                    <label for="discordMode">Modus</label>
                    <select
                        id="discordMode"
                        name="discordMode"
                        class="form-select"
                    >
                        <option
                            value="webhook"
                            selected={envConfig.DISCORD_MODE !== "dm"}
                            >Webhook (Kanal)</option
                        >
                        <option
                            value="dm"
                            selected={envConfig.DISCORD_MODE === "dm"}
                            >Direct Message (Privat)</option
                        >
                    </select>
                </div>

                <div
                    id="webhook-section"
                    class={envConfig.DISCORD_MODE === "dm" ? "hidden" : ""}
                >
                    <div class="form-group">
                        <label for="discordWebhook">Discord Webhook URL</label>
                        <input
                            type="text"
                            id="discordWebhook"
                            name="discordWebhook"
                            placeholder="https://discord.com/api/webhooks/..."
                            value={envConfig.DISCORD_WEBHOOK_URL || ""}
                        />
                    </div>
                </div>

                <div
                    id="dm-section"
                    class={envConfig.DISCORD_MODE !== "dm" ? "hidden" : ""}
                >
                    <div class="form-group">
                        <label for="discordBotToken">Bot Token</label>
                        <input
                            type="password"
                            id="discordBotToken"
                            name="discordBotToken"
                            placeholder="MTE..."
                            value={envConfig.DISCORD_BOT_TOKEN || ""}
                        />
                    </div>
                    <div class="form-group">
                        <label for="discordUserId">User ID</label>
                        <input
                            type="text"
                            id="discordUserId"
                            name="discordUserId"
                            placeholder="123456789..."
                            value={envConfig.DISCORD_USER_ID || ""}
                        />
                    </div>
                </div>

                <div class="actions">
                    <button type="submit" class="btn">Speichern</button>
                </div>
            </form>
        </div>
        <div class="divider"></div>

        <div class="settings-section">
            <h2>Zugangsdaten</h2>
            <form method="POST">
                <input type="hidden" name="formType" value="credentials" />
                <div class="form-group">
                    <label for="username">CIS Benutzername (Login-Nummer)</label
                    >
                    <input
                        type="text"
                        id="username"
                        name="username"
                        placeholder="12345"
                        value={envConfig.CIS_USERNAME}
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="password">Passwort</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="••••••••"
                        required
                    />
                </div>
                <div class="actions">
                    <button type="submit" class="btn">Speichern</button>
                </div>
            </form>
        </div>
        <div class="divider"></div>
        <div class="settings-section">
            <h2>Allgemein</h2>
            <form method="POST">
                <input type="hidden" name="formType" value="general" />
                <div class="form-group">
                    <label for="interval">Prüf-Intervall (Minuten)</label>
                    <input
                        type="number"
                        id="interval"
                        name="interval"
                        placeholder="60"
                        min="1"
                        value={envConfig.CHECK_INTERVAL || "60"}
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="transcriptUrl">Noten-URL (Optional)</label>
                    <input
                        type="text"
                        id="transcriptUrl"
                        name="transcriptUrl"
                        placeholder="https://cis.nordakademie.de/..."
                        value={envConfig.TRANSCRIPT_URL || ""}
                    />
                    <small
                        style="display:block; margin-top:0.5rem; color:rgba(255,255,255,0.5); font-size: 0.8rem;"
                    >
                        Standard: https://cis.nordakademie.de/...
                    </small>
                </div>
                <div class="actions">
                    <button type="submit" class="btn">Speichern</button>
                </div>
            </form>
        </div>

        <script>
            const modeSelect = document.getElementById("discordMode");
            const webhookSection = document.getElementById("webhook-section");
            const dmSection = document.getElementById("dm-section");

            if (modeSelect && webhookSection && dmSection) {
                modeSelect.addEventListener("change", (e) => {
                    const val = (e.target as HTMLSelectElement).value;
                    if (val === "dm") {
                        webhookSection.classList.add("hidden");
                        dmSection.classList.remove("hidden");
                    } else {
                        webhookSection.classList.remove("hidden");
                        dmSection.classList.add("hidden");
                    }
                });
            }
        </script>
        <div class="actions-main">
            <a href="/" class="btn btn-secondary">Zurück zur Übersicht</a>
        </div>
    </div>
</Layout>

<style>
    .settings-section {
        margin-bottom: 2rem;
    }
    h2 {
        font-size: 1.2rem;
        margin-bottom: 1rem;
        color: var(--text-main);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 0.5rem;
    }
    .divider {
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        margin: 2rem 0;
    }
    .form-group {
        margin-bottom: 1.5rem;
    }
    .actions {
        display: flex;
        justify-content: flex-end;
    }
    .actions-main {
        margin-top: 2rem;
        display: flex;
        justify-content: center;
    }
    .message {
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 2rem;
        font-weight: 500;
    }
    .message.success {
        background: rgba(16, 185, 129, 0.1);
        color: #34d399;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }
    .message.error {
        background: rgba(239, 68, 68, 0.1);
        color: #f87171;
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

    /* Toggle Switch */
    .checkbox-group {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
    }

    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 0.1);
        transition: 0.4s;
        border-radius: 34px;
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        transition: 0.4s;
        border-radius: 50%;
    }

    input:checked + .slider {
        background-color: #34d399;
    }

    input:checked + .slider:before {
        transform: translateX(26px);
    }

    .label-text {
        font-weight: 500;
    }

    .form-select {
        width: 100%;
        padding: 0.75rem;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 1rem;
        outline: none;
    }

    .form-select:focus {
        border-color: rgba(255, 255, 255, 0.3);
        background: rgba(255, 255, 255, 0.1);
    }

    .hidden {
        display: none;
    }
</style>
